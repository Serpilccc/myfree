<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <div class="light-well">
        <h2 class="page-header text-center">Nouveau document</h2>

<% if !@course.errors.empty? %>
  <div class="alert alert-error">
    <ul>
      <% @courses.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>



<div class="well">
  <%= form_for @course, html: { multipart: true } do |f| %>

    <div class="form-group">
            <%= f.text_field :titre, autofocus: true, placeholder: "titre", class: "form-control" %>
          </div>


<div class="form-group">
            <%= f.text_field :matiere, autofocus: true, placeholder: "matière", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.text_field :fac, autofocus: true, placeholder: "fac", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.text_field :annee, autofocus: true, placeholder: "année", class: "form-control" %>
          </div><br>

  
    <center><%= f.file_field :pdf %><center><br>
    <center><%= f.submit "Save", class: "btn btn-primary" %>
      <%=  link_to 'Back', courses_path,  class: "btn btn-primary" %></center>
  <% end %>

</div>

</div>
</div>
</div>
</div>