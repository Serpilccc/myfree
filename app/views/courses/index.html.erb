<% @courses.each do |course| %>

<div>
  <div class="panel panel-default" style="margin-right: 25%;">
    <div class="panel-heading">

      <span class="MakaleYazariAdi">
        <strong><h4><i><%= course.titre%></i></strong></h4>
        <strong><h4><%= course.author.user.username%></strong></h4>
      </span>

      <div class="media-left">
        <button type="submit" class="btn btn-info"> <%= link_to "Download Course", course.pdf_url %></button>
      </div>

      <div class="media-body">
        <h4 class="media-heading"></h4>
        <strong class="courseMFA">Matière:<%= course.matiere %></strong>
        <br>
        <strong class="courseMFA">Fac:<%= course.fac %></strong>
        <br>
        <strong class="courseMFA">Année:<%= course.annee %></strong>

        <div class="btn-group" role="group" id="BegeniButonlari">

          <div class = "caption" styles="text-align:center;">
        
      </div>

      <%= link_to like_course_path(course), class: "like", method: :put do %>

      <button type="button" class="btn btn-info" aria-label="Left Align">
        <span class="glyphicon glyphicon-thumbs-up glyphicon-align-center" aria-hidden="true"></span>
        <span class="badge"><%= course.get_upvotes.size%></span>
      </button>

<%end%>

<%= link_to unlike_course_path(course), class: "like", method: :put do %>

<button type="button" class="btn btn-info" aria-label="Left Align">
  <span class="glyphicon glyphicon-thumbs-down glyphicon-align-center" aria-hidden="true"></span>
  <span class="badge"><%= course.get_downvotes.size%></span>
</button>

<%end%>

</div>
</div>  
</div>
</div>

<div class="panel-body">
  <div class="media">
    <div class="media-body">
      <div class="clearfix">
      </div>
    </div>
  </div>
</div>
</div>

<br>
<br>
<br>
<br>

<style type="">
.MakaleYazariAdi{
  line-height:34px;
}
#BegeniButonlari{
  float:right;
  margin-top:15px;
}
.courseMFA{
  color: black;
}
.like:hover{
  text-decoration: none;
}
</style>

<% end -%>

</div>